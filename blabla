#include "./minilibx_macos/mlx.h"
#include <math.h>

int		main(void)
{
	void	*mlx_ptr;
	void	*win_ptr;
	void	*img_ptr;
	int		x;
	int		y;
	int		color;
	int		alt;
	int		xp;
	int		yp;
	char	*data;
	int		bpp;
	int		size_line;
	int		endian;

	mlx_ptr = mlx_init();	
	win_ptr = mlx_new_window(mlx_ptr, 1500, 1000, "Demo");
	img_ptr = mlx_new_image(mlx_ptr, 1500, 1000);
	mlx_put_image_to_window(mlx_ptr, win_ptr, img_ptr, 0, 0);
	data = mlx_get_data_addr(img_ptr, &bpp, &size_line, &endian);
	x = 0;
	printf("first pix: %d\n", *data);
	printf("bpp: %d\n", bpp);
	printf("size line: %d\n", size_line);
	printf("endian: %d\n", endian);
	x = 1000;
	alt = 2;
	color = 0xff0010;
	while (x < 1500)
	{
		y = 500;
		while (y < 700)
		{
			xp = (x - y) * cos(0.523599);
			yp = -alt + (x + y) * sin(0.523599);
			mlx_pixel_put(mlx_ptr, win_ptr, xp, yp, color);
			y += 5;
		}
		x += 5;
	}
	mlx_loop(mlx_ptr);
	mlx_destroy_image(mlx_ptr, img_ptr);
	return (0);
}
